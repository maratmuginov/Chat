@model IEnumerable<ChatLib.Models.Message>
@{
    ViewData["Title"] = "Home Page";
    var userName = User.Identity.Name;
}

<div>
    <h2>Chat</h2>
    
    <div class="row">
        <div class="col-md-12" id="Chat">
            @if (Model != null)
            {
                @foreach (var message in Model.OrderByDescending(message => message.Sent))
                {
                    <div class="row">
                        <div class="col-md-6 offset-md-6">
                            <div>
                                <p>@($"{message.UserName} ({message.Sent:hh:mm:ss})")</p>
                                <p>@message.Text</p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="col-md-12">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input name="Text" class="form-control" id="NewMessageText"/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Send" id="SendButton" class="btn"/>
                </div>
                <input type="hidden" value="@userName" name="UserName"/>
            </form>
        </div>
    </div>
</div>

@if (User.Identity.IsAuthenticated)
{
    <script>
        const userName = "@ViewBag.CurrentUserName";
    </script>
}
